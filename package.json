{
    "name": "lordofapps",
    "version": "0.1.3",
    "description": "Global wrapper for app packages",
    "homepage": "https://github.com/lordofapps/lordofapps",
    "bin": {
        "lord": "index.js"
    },
    "scripts": {
        "dev": "parcel watch -d .dist -t node src/index.ts",
        "dist": "NODE_ENV=production run-s dev",
        "patch": "run-s check clean dist git-patch push",
        "minor": "run-s check clean dist git-minor push",
        "major": "run-s check clean dist git-major push",
        "check": "npm whoami && npm pack --dry-run",
        "clean": "rimraf .dist",
        "git-patch": "npm version patch",
        "git-minor": "npm version minor",
        "git-major": "npm version major",
        "push": "git push origin master --tags && npm publish"
    },
    "author": "Jaspreet Singh <dev@jas.bio>",
    "license": "MIT",
    "devDependencies": {
        "@jas99/tslint-config": "^0.1.5",
        "@types/fs-extra": "^5.0.4",
        "@types/lodash": "^4.14.115",
        "@types/pify": "^3.0.2",
        "@types/shelljs": "^0.8.0",
        "@types/yargs": "^11.1.0",
        "npm-run-all": "^4.1.3",
        "tslint": "^5.10.0",
        "rimraf": "^2.6.2",
        "parcel-bundler": "^1.9.7",
        "parcel-plugin-typescript": "^1.0.0"
    },
    "dependencies": {
        "fs-extra": "^7.0.0",
        "omelette": "^0.4.11",
        "outdent": "^0.5.0",
        "pify": "^3.0.0",
        "shelljs": "^0.8.2",
        "ts-node": "^7.0.0",
        "typescript": "^3.0.1",
        "yargs": "^12.0.1"
    }
}
